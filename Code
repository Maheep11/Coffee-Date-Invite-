<body>
  <div class="container">
    <h1>â˜• Coffee Date?</h1>
    <p>Will you go on a coffee date with me?</p>
    <input type="date" id="dateInput"><br>
    <input type="text" id="messageInput" placeholder="Write a cute message..."><br>
    <button onclick="sayYes()">Yes ðŸ’–</button>
    <button id="nobutton">No ðŸ˜¢</button>
  </div>

  <!-- Modal -->
  <div id="modal">
    <div id="modalContent">
      <p id="modalText"></p>
      <button onclick="closeModal()">Okay ðŸ’•</button>
    </div>
  </div>

  <script>
    const noBtn = document.getElementById("nobutton");

    // Show modal
    function showModal(text) {
      document.getElementById("modalText").innerHTML = text;
      document.getElementById("modal").style.display = "flex";
    }
    function closeModal() {
      document.getElementById("modal").style.display = "none";
    }

    // Handle Yes
    function sayYes() {
      const dateInput = document.getElementById("dateInput").value;
      const messageInput = document.getElementById("messageInput").value;
      if (!dateInput) {
        showModal("ðŸ“… Please pick a date!");
        return;
      }
      const formattedDate = new Date(dateInput).toDateString();
      showModal(`â˜• Date set for <b>${formattedDate}</b><br>ðŸ’Œ Message: "${messageInput || 'No message, just vibes âœ¨'}"`);
    }

    // No button escapes
    noBtn.addEventListener("mouseover", () => {
      const x = Math.floor(Math.random() * (window.innerWidth - 100));
      const y = Math.floor(Math.random() * (window.innerHeight - 50));
      noBtn.style.position = "absolute";
      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
    });
  </script>
